<h1>登録済みルーム一覧</h1>

<table>
    <thead>
        <tr>
            <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>料金</th>
            <th>登録日</th>
        </tr>
    </thead>
    <tbody>
        <% @rooms.each do |room| %>
            <tr>
                <td><%= link_to image_tag("#{room.image}"), room %></td>
                <td><%= link_to room.name, room %></td>
                <td><%= room.introduction %></td>
                <td>¥<%= room.price %></td>
                <td><%= room.created_at.to_s(:datetime_jp) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

